page {
  height: 100%;
}
.letter-box {
  height: 100%;
  background: #eeeeee;
  position: relative;
  padding-bottom: 100rpx;
}
.time {
  text-align: center;
  color: #cccccc;
  font-size: 20rpx;
  padding: 25rpx 0;
}
.avatar {
  width: 120rpx;
  height: 100rpx;
}
.letter-left .content {
  display: flex;
}
.letter-left .content .answer {
  width: 100%;
  margin-left: 40rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  position: relative;
  background: #ffffff;
  border-radius: 10rpx;
}
.letter-left .content .answer .triangle {
  width: 0;
  height: 0;
  border: 20rpx solid #cccccc;
  border-color: transparent #ffffff transparent transparent;
  top: 15rpx;
  left: -38rpx;
  position: absolute;
}
.letter-left .content .borderOther {
  border: 1px solid #eeeeee;
}
.letter-right .content {
  display: flex;
}
.letter-right .content .answer {
  width: 100%;
  margin-right: 40rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 50rpx;
  position: relative;
  background: var(--public_color1);
  border-radius: 10rpx;
  color: #ffffff;
}
.letter-right .content .answer .triangle {
  width: 0;
  height: 0;
  border: 20rpx solid #cccccc;
  border-color: transparent transparent transparent var(--public_color1);
  top: 15rpx;
  left: 531rpx;
  position: absolute;
}
.letter-right .content .borderOther {
  border: 1px solid #eeeeee;
}
.letter-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: #ffffff;
  padding: 15rpx 30rpx;
}
.letter-bottom .letter-input {
  width: 500rpx;
  height: 70rpx;
  line-height: 70rpx;
  padding: 0 10px;
  background: #f2f2f2;
  border-radius: 10rpx;
  font-size: 26rpx;
}
.letter-bottom .sentBtn {
  width: 115rpx;
  height: 50rpx;
  min-height: 40rpx;
  font-size: 20rpx;
  padding: 0;
  margin: 0;
  text-align: center;
  line-height: 50rpx;
  background: var(--public_color1);
  color: #ffffff;
}
