.information_box {
  height: 100%;
  background: #ffffff;
  padding: 306rpx 40rpx 0 40rpx;
}
/* 头部tab */
.top-box {
  position: fixed;
  width: 100%;
  padding-left: 40rpx;
  padding-right: 40rpx;
  top: 0;
  left: 0;
  z-index: 10;
  background: #ffffff;
}
.information_tab {
  display: flex;
  justify-content: space-between;
  padding-top: 50rpx;
  margin-bottom: 50rpx;
}
.information_tab .train-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.information_tab .train-item .train-item-icon {
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}
.information_tab .train-item .train-item-icon .icon {
  font-size: 48rpx;
  color: #ffffff;
}
.information_tab .train-item .blue {
  background: linear-gradient(-30deg, #258dfc 0%, #53c0ff 100%);
  box-shadow: 0px 20px 15px 1px rgba(41, 146, 252, 0.15);
}
.information_tab .train-item .red {
  background: linear-gradient(-30deg, #f81358 0%, #fd7b79 100%);
  box-shadow: 0px 20px 15px 1px rgba(248, 26, 90, 0.15);
}
.information_tab .train-item .orange {
  background: linear-gradient(-30deg, #fe7956 0%, #ffa569 100%);
  box-shadow: 0px 20px 15px 1px rgba(254, 126, 88, 0.15);
}
.information_tab .train-item .news {
  width: 30rpx;
  height: 30rpx;
  font-size: 16rpx;
  line-height: 30rpx;
  color: #ffffff;
  text-align: center;
  background: red;
  border-radius: 50%;
  border: 1px solid #ffffff;
  position: absolute;
  top: 0;
  left: 70rpx;
}
.information_tab .train-item .train-word {
  padding-top: 16rpx;
  font-size: 24rpx;
  font-weight: 500;
}
.info-word {
  font-size: 32rpx;
  font-weight: bold;
  padding-bottom: 20rpx;
}
.information_title {
  display: flex;
  justify-content: space-between;
  padding-bottom: 12rpx;
}
.information_title .info-word {
  font-size: 32rpx;
  font-weight: bold;
}
.information_title .info-checked {
  font-size: 20rpx;
  font-weight: 300;
}
.information_title .info-checked .van-checkbox__label {
  color: #cccccc;
  font-size: 20rpx;
}
.information_title .van-checkbox {
  align-items: center;
}
.information_title .van-checkbox .van-checkbox__icon {
  font-size: 24rpx !important;
}
/* 系统通知 */
.notice-content .content-title {
  display: flex;
  justify-content: space-between;
  padding-bottom: 10rpx;
}
.notice-content .notice-content-title {
  font-size: 26rpx;
  width: 440rpx;
  white-space: initial;
  color: #000000;
}
.notice-content .blod {
  font-weight: bold;
}
.notice-content .grey {
  color: #C3CCD9;
}
.notice-content .notice-word {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  white-space: normal;
}
.notice-content .notice-word-show {
  white-space: initial;
}
.notice-content .content-word {
  font-size: 24rpx;
  font-weight: 500;
  color: #c3ccd9;
}
.notice-content .content-word .font-color {
  color: var(--public_color1);
}
.notice-content .dynamic-content {
  display: flex;
}
.notice-content .content-box {
  display: flex;
  justify-content: space-between;
}
.notice-content .show-hidden {
  display: inline-block;
  font-size: 20rpx;
  color: var(--public_color1);
}
.notice-content .time {
  font-size: 20rpx;
  color: #cccccc;
}
.notice-content .btn_box {
  display: flex;
  width: 140rpx;
  margin-left: 20rpx;
}
.notice-content .btn {
  width: 72rpx;
  height: 32rpx;
  font-size: 20rpx;
  line-height: 32rpx;
  text-align: center;
  border-radius: 16rpx;
  color: #ffffff;
}
.notice-content .blue {
  margin-left: 20rpx;
  background: var(--public_color1);
}
.notice-content .blue:hover {
  background: var(--public_color1_hover);
}
.notice-content .gray {
  background: #C3CCD9;
}
.notice-content .operation {
  display: flex;
  height: 100%;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  background: var(--public_color3);
}
.letter-box {
  display: flex;
}
.avatar {
  width: 88rpx;
  height: 88rpx;
  overflow: hidden;
  border-radius: 50%;
}
.avatar image {
  width: 100%;
  height: 100%;
}
.news-content {
  margin-left: 24rpx;
}
.news-content .news-top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 22rpx;
}
.news-content .news-top .news-name {
  font-size: 26rpx;
  font-weight: bold;
}
.news-content .news-top .news-time {
  font-size: 24rpx;
  font-weight: 300;
  color: #9CA6B5;
}
.news-content .news-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.news-content .news-bottom .news-word {
  width: 500rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #9CA6B5;
}
.news-content .news-bottom .news-num {
  width: 24rpx;
  height: 24rpx;
  font-size: 18rpx;
  color: #ffffff;
  text-align: center;
  line-height: 24rpx;
  background: red;
  border-radius: 50%;
}
.i-swipeout-wrap {
  border: none;
}
